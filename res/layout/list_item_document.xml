<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@drawable/list_item_background">

   	<ImageView android:id="@+id/list_item_document_icon"
   	    android:contentDescription="@string/title_document_list"
   	    android:src="@drawable/collection"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true" />
   	
	<TextView android:id="@+id/list_item_document_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="6dp"
        android:singleLine="false"
        android:lines="@integer/document_lines"
        android:ellipsize="end"
        android:layout_toRightOf="@id/list_item_document_icon"
	    android:layout_centerVertical="true"
        android:textSize="@dimen/document_text_size" />
			
</RelativeLayout>


