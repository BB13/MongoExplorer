<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/list_item_background">

   	<ImageView android:id="@+id/list_item_load_more_icon"
   	    android:contentDescription="@string/title_document_list"
   	    android:src="@drawable/ic_menu_more"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true" />
   	
	<TextView android:id="@+id/list_item_load_more_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/list_item_load_more_icon"
	    android:layout_centerVertical="true"
	    android:text="@string/load_more"
        android:textStyle="bold"
        android:textSize="@dimen/document_list_item_text_size" />
			
</RelativeLayout>


